<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="buttonStyle">@style/LoginActivityButton</item>
        <item name="android:textColor">@color/half_white</item>
        <item name="android:textColorPrimary">@color/half_white</item>
        <item name="alertDialogTheme">@style/AppTheme.FullScreen.ProgressDialog</item>

        <!--TextInputLayout style-->
        <item name="android:textColorHint">@color/half_white</item>
        <item name="colorControlNormal">@color/half_white</item>
        <item name="editTextColor">@color/half_white</item>
        <item name="colorControlActivated">@color/transparent_grey</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.Appcompat.Large.White" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/half_white</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.White" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/half_white</item>
    </style>

    <style name="LoginActivityButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/half_white</item>
        <item name="android:background">@color/transparent_grey</item>
    </style>

    <style name="AppTheme.FullScreen.ProgressDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/half_white</item>
        <item name="android:textColorPrimary">@color/half_white</item>
        <item name="android:background">#ff42959a</item>

    </style>



</resources>
